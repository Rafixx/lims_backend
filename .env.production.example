# Configuración de Producción para LIMS Backend
# Copiar a .env.production y completar con valores reales

# Entorno
NODE_ENV=production
PORT=3002

# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lims_prod
DB_USER=lims_user
DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO
DB_SCHEMA=lims_pre

# JWT
JWT_SECRET=CAMBIAR_JWT_SECRET_SEGURO_MINIMO_32_CARACTERES
JWT_EXPIRES_IN=24h

# Configuración del Servidor
CORS_ORIGIN=https://tu-dominio.com
API_PREFIX=/api

# Logs
LOG_LEVEL=info

# Otros (si aplican)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
